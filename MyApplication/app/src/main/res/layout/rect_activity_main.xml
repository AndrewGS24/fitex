<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:weightSum="1"
    tools:context="com.example.andy.fitex_wear.MainActivity"
    tools:deviceIds="wear_square">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        app:layout_box="all"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:background="@null"
            android:layout_gravity="bottom|left"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@color/circular_button_normal"
            android:id="@+id/teamBut" />

        <ImageButton
            android:background="@null"
            android:layout_gravity="bottom|right"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@color/blue"
            android:id="@+id/activityBut" />

        <ImageButton
            android:background="@null"
            android:layout_gravity="left|top"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@color/blue"
            android:id="@+id/rankBut"
            android:onClick="onButtonClick"/>

        <ImageButton
            android:background="@null"
            android:layout_gravity="right|top"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@android:drawable/ic_dialog_email"
            android:id="@+id/messagesBut" />

        <ProgressBar
            android:id="@+id/progressWheel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center|center"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:progress="100"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_bar" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_gravity="center|center" />

    </FrameLayout>
</RelativeLayout>
